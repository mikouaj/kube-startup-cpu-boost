before:
  hooks:
    - go mod tidy
builds:
  - id: kube-startup-cpu-boost
    main: ./cmd
    binary: ./bin/manager 
    env:
      - CGO_ENABLED=0
    mod_timestamp: "{{ .CommitTimestamp }}"
    flags:
      - -trimpath
    ldflags:
      - "-s -w"
    goos:
      - linux
    goarch:
      - amd64
    hooks:
      pre:
        - cmd: make manifests generate 
      post:
        - cmd: kustomize edit set image controller=ghcr.io/mikouaj/{{ .ProjectName }}:{{ .Tag }}
          dir: config/manager
        - cmd: kustomize build config/default > manifests.yaml
dockers:
  - goos: linux
    goarch: amd64
    dockerfile: goreleaser.dockerfile
    image_templates:
      - "ghcr.io/mikouaj/{{ .ProjectName }}:latest"
      - "ghcr.io/mikouaj/{{ .ProjectName }}:{{ .Tag }}" 
      - "ghcr.io/mikouaj/{{ .ProjectName }}:v{{ .Major }}.{{ .Minor }}" 
      - "ghcr.io/mikouaj/{{ .ProjectName }}:{{ .ShortCommit }}" 
archives:
  - format: binary
release:
  # If you want to manually examine the release before its live, uncomment this line:
  # draft: true
  extra_files:
    - glob: ./manifests.yaml
changelog:
  skip: true
